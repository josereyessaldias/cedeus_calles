<h5>Revistas ISI</h5>

<table>
	<tr>
		<th class="vertical">Periodo</th>
		<th>Autores</th>
		<th>DOI</th>
		<th>Título</th>
		<th>Revista</th>
		<th>Volumen</th>
		<th>Páginas</th>
		<th>Año</th>
		<th>Afiliación</th>
		<th>Respaldo</th>

	</tr>

	<% @products.each do |product| %>
		<% @person = [] %>

		<% if product.tipo == "revista_isi" %>
			
			<% product.person_product.order(:id).each do |person_prod| %>
				<% @person << person_prod.person.cedeusname %>
			<% end %>

			<tr>
				<td><strong><%= product.registro %></strong></td>

				<td style="width:100px"><strong>
					<% @person.each_with_index do |i,index| %>
						<% if index < @person.length - 1 %>
							<%= link_to i, person_path(Person.find_by cedeusname: i) %>,
						<% else %>
							<%= link_to i, person_path(Person.find_by cedeusname: i) %>
						<% end %>
					<% end %>
				</strong>
				</td>

				<td style="max-width:70px;word-wrap: break-word"><%= product.doi %></td>
				<td style="width:350px;"><strong><%= product.titulo %></strong></td>
				<td style="max-width: 100px"><i><%= product.revista %></i></td>
				<td><%= product.volume %></td>
				<td><%= product.pages %></td>
				<td><%= product.year %></td>
				<td style="text-align: center">
					<strong><%= image_tag("ditl_small.png", style: "height:30%") if product.ditl_check %>
					<%= image_tag("brt_small.jpg", style: "height:25%") if product.brt_check  %>
					<%= image_tag("cedeus_accmov.png", style: "height:20%") if product.cedeus_check %>
					<%= image_tag("cedeus_calles.png", style: "height:20%", title: "cedeus_calles") if product.cedeuscalles_check %></strong>
				</td>

				<td style="max-width: 30px">
					<% product.respaldos.each_with_index do |respaldo,i| %>
						<%= link_to "Respaldo #{i+1}", asset_path(respaldo.file), :target => '_blank' %>
					<% end %>
				</td>

				<td><%= link_to 'editar', edit_product_path(product.id, :tipo => product.tipo) %> 
					<%= link_to 'borrar', product_path(product), method: :delete, data: { confirm: "¿Está seguro de borrar el artículo '#{product.titulo}'?" } %></td>

			</tr>
		<% end %>
	<% end %>

</table>
<br>

