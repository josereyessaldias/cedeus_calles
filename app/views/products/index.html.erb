<h3>Productos</h3>

<br>
<table>
	<thead>
		<th>Autores</th>
		<th>Cluster</th>
		<th>Título</th>
		<th>Revista</th>
		<th>Tipo</th>
		<th>Año</th>
		<th></th>
	</thead>

	<% @products.each do |product| %>
		<tr>
			<td>
				<% product.persons.each do |person| %>
					<%= person.name %>,
					<% person.clusters.each do |cluster| %>
						<% if cluster.name != "Sin cluster" %>
							<% @temp << cluster.name %>
						<% end %>
					<% end %> 
				<% end %>
			</td>

			<td>
				<% @temp.uniq.each do |i| %>
					<%= i %>/ 
				<% end %>
			</td>

			<td><%= product.titulo %></td>
			<td><%= product.revista %> </td>
			<td><%= product.tipo %></td>
			<td><%= product.year %></td>
			<td><%= link_to 'borrar', product_path(product), method: :delete %></td>

		</tr>
	<% end %>

</table>

<br>
<%= link_to 'Ingresar Producto', new_product_path(:tipo => "revista_isi"), :class => 'btn btn-sm btn-info' %>
<%= link_to 'Ingresar Producto(libro)', new_product_path(:tipo => "libro"), :class => 'btn btn-sm btn-info' %>